---
import { SITE } from "@config";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import FeaturedSoftwareCard from "@components/FeaturedSoftwareCard";
import { featuredSoftwareService } from "services/FeaturedSoftwareService";
import LinkButton from "@components/LinkButton.astro";

const featuredSoftware =
  await featuredSoftwareService.retrieveFeaturedSoftware();
---

<Layout title={`Software - ${SITE.title}`}>
  <Header activeNav="software" />
  <Main pageTitle="Software">
    <ul>
      {
        featuredSoftware.map(software => (
          <FeaturedSoftwareCard
            name={software.name}
            logline={software.logline}
            metadata={software.metadata}
            description={software.description}
            url={software.url}
          />
        ))
      }
    </ul>

    <div class="all-posts-btn-wrapper mt-8 text-center">
      <LinkButton href="/software/all">
        All Software
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>

    <br />
  </Main>
  <Footer />
</Layout>
